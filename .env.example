# YouTube API Configuration
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:8000/oauth2/youtube/callback
# YOUTUBE_API_KEY=your_youtube_api_key (Likely not needed if only using OAuth for user actions)

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/oauth2/linkedin/callback
# LINKEDIN_API_KEY=your_linkedin_api_key (Likely not needed)

# Application Settings
APP_PORT=8000
APP_HOST=localhost
DEBUG_MODE=true

# Storage Configuration
STORAGE_DIR=./data
CACHE_EXPIRY=3600

# Relay Service Configuration
DEFAULT_BITRATE=5000
DEFAULT_RESOLUTION=1080p
DEFAULT_FRAME_RATE=30
DEFAULT_AUDIO_QUALITY=192
DEFAULT_ENCODER=x264
DEFAULT_PRESET=veryfast